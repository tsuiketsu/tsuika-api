{
  "name": "tsuika-backend",
  "private": true,
  "version": "1.0.0",
  "description": "Backend for tsuika build with üî•, üçû and üêò",
  "main": "index.ts",
  "type": "module",
  "keywords": [
    "api",
    "backend",
    "hono",
    "postgres",
    "drizzle",
    "better-auth",
    "resend"
  ],
  "author": {
    "name": "ImRayy",
    "url": "https://github.com/ImRayy"
  },
  "license": "AGPL-3.0",
  "scripts": {
    "type-check": "tsc --noEmit",
    "start": "bun src/index.js",
    "dev": "NODE_ENV=development bun --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "serve": "bun dist/index.js",
    "format": "biome format --write ./src",
    "lint": "biome check --write ./src",
    "lint:commit": "commitlint --edit",
    "db:generate": "bun drizzle-kit generate --config=drizzle.config.ts",
    "build:container": "docker build -t tsuika-api ."
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.3",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.4",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.9",
    "image-size": "^2.0.2",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "link-preview-js": "^3.1.0",
    "lodash.kebabcase": "^4.1.1",
    "minio": "^8.0.6",
    "nanoid": "^5.1.5",
    "normalize-url": "^8.0.1",
    "pg": "^8.16.3",
    "resend": "^4.5.1",
    "tinycolor2": "^1.6.0",
    "tsuika-email-templates": "^0.0.4",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^10.1.0",
    "@hono/zod-validator": "^0.7.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash.kebabcase": "^4.1.9",
    "@types/minio": "^7.1.1",
    "@types/pg": "^8.15.6",
    "@types/tinycolor2": "^1.4.6",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.1",
    "drizzle-seed": "^0.3.1",
    "lefthook": "^1.11.13",
    "postgres": "^3.4.5",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "@types/bun": "^1.2.13",
    "typescript": "^5.8.3"
  },
  "trustedDependencies": ["@biomejs/biome", "lefthook"]
}
