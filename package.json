{
  "name": "tsuika-backend",
  "private": true,
  "version": "1.0.0",
  "description": "Mongodb & Backend Practice",
  "main": "index.ts",
  "type": "module",
  "keywords": ["API", "Backend", "Hono", "Postgres"],
  "author": {
    "name": "ImRayy",
    "url": "https://github.com/ImRayy"
  },
  "license": "AGPL-3.0",
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun run dist/index.js",
    "dev": "NODE_ENV=development bun run --hot src/index.ts",
    "format": "biome format --write ./src",
    "lint": "biome check --write ./src"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.9",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.1",
    "postgres": "^3.4.5"
  },
  "peerDependencies": {
    "@types/bun": "^1.2.13",
    "typescript": "^5.8.3"
  },
  "trustedDependencies": ["@biomejs/biome"]
}
